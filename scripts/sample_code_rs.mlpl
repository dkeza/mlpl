# Primer programa
  u MLPL jeziku -
  izracunava faktorijel
#
ispisi "Unesite vrednost";
procitaj x; # procitaj broj #
ako 0 < x onda # ne racunaj ako je x <= 0 #
  faktorijel := 1;
  ponovi
    faktorijel := faktorijel * x;
    x := x - 1
  dok x = 0;
  ispisi "Faktorijel za unetu vrednost je"
  ispisi faktorijel  # ispisi faktorijel od x #
kraj
